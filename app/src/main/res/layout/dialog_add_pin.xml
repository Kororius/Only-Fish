<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/pin_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pin Name (required)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/water_body_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Water Body (required)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/fish_caught_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fish Caught (optional)"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/biggest_fish_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Biggest Fish (optional)"
        android:inputType="numberDecimal"/>

</LinearLayout>